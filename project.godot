config_version=5

[application]

config/name="Tower Stacking"
config/description="A fun tower stacking game for Android"
run/main_scene="res://scenes/main_menu.tscn"
config/features=PackedStringArray("4.5", "Mobile")
boot_splash/bg_color=Color(0.141176, 0.141176, 0.141176, 1)
config/icon="res://assets/images/icon.png"

[autoload]

GameConfig="*res://config/game_config.gd"
GameManager="*res://scripts/game_manager.gd"
ScoreManager="*res://scripts/score_manager.gd"
AdManager="*res://scripts/ad_manager.gd"
IAPManager="*res://scripts/iap_manager.gd"
AudioManager="*res://scripts/audio_manager.gd"
AdsConfig="*res://config/ads_config.gd"
StatsManager="*res://scripts/stats_manager.gd"

